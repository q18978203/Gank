<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorTabBg"
        android:orientation="vertical">
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_music"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabBackground="@drawable/ripple_tab_bg"
            app:tabIndicatorColor="@color/colorTabLine"
            app:tabSelectedTextColor="@color/colorTabTextCheck"
            app:tabTextColor="@color/colorTabTextNormal" />
    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_music"
            android:layout_width="match_parent"
            android:background="#fff2f4f5"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
        <include
            layout="@layout/include_play_bar"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_gravity="bottom" />
    </FrameLayout>

</LinearLayout>
